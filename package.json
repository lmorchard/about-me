{
  "name": "about-me",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run full-build && npm-run-all --parallel watch serve",
    "serve": "reload -d build",
    "watch": "onchange -v -i 'index.js' '{lib,templates,styles,content,cards,assets}/**/*' -- npm run build",
    "clean": "./index.js clean",
    "build": "./index.js build",
    "fetch": "./index.js fetch",
    "full-build": "npm run clean && npm run fetch && npm run build",
    "build:production": "npm run full-build",
    "build:stage": "npm run full-build"
  },
  "author": "Les Orchard <me@lmorchard.com>",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.1.2",
    "classnames": "^2.5.1",
    "commander": "^14.0.1",
    "commonmark": "^0.31.2",
    "dotenv": "^17.2.2",
    "escape-html": "^1.0.3",
    "feedparser": "^2.2.10",
    "gh-pages": "^6.3.0",
    "globby": "^11.1.0",
    "http-server": "^14.1.1",
    "marked": "^16.3.0",
    "mkdirp": "^3.0.1",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "recursive-copy": "^2.0.14",
    "reload": "^3.4.2",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "spotify-web-api-node": "^5.0.2",
    "timeago.js": "^4.0.2",
    "twitter": "^1.7.1",
    "twitter-text": "^3.1.0",
    "watch": "^1.0.2",
    "xml2js": "^0.6.2"
  }
}
