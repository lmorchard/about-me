{
  "name": "about-me",
  "version": "2.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "npm run full-build && npm-run-all --parallel watch serve",
    "serve": "reload -d build",
    "watch": "chokidar 'lib/**/*' 'templates/**/*' 'styles/**/*' 'content/**/*' 'cards/**/*' 'assets/**/*' 'index.js' 'config.js' -c 'npm run build'",
    "clean": "./index.js clean",
    "build": "./index.js build",
    "fetch": "./index.js fetch",
    "full-build": "npm run clean && npm run fetch && npm run build",
    "build:production": "npm run full-build",
    "build:stage": "npm run full-build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "author": "Les Orchard <me@lmorchard.com>",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.1.2",
    "classnames": "^2.5.1",
    "commander": "^14.0.1",
    "commonmark": "^0.31.2",
    "dotenv": "^17.2.3",
    "escape-html": "^1.0.3",
    "gh-pages": "^6.3.0",
    "globby": "^15.0.0",
    "http-server": "^14.1.1",
    "marked": "^16.4.1",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "recursive-copy": "^2.0.14",
    "reload": "^3.4.2",
    "rimraf": "^6.0.1",
    "rss-parser": "^3.13.0",
    "sass": "^1.93.2",
    "spotify-web-api-node": "^5.0.2",
    "timeago.js": "^4.0.2",
    "xml2js": "^0.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
